<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codyme.youme.UserFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <com.codyme.youme.Views.ClickableImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/user_head_default"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请点击头像登录"
            android:gravity="center"
            android:padding="8dp"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  浏览历史"
            android:id="@+id/button6"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_1"
            android:drawableStart="@drawable/user_default_1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <include layout="@layout/divider_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  我的收藏"
            android:id="@+id/button5"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_2"
            android:drawableStart="@drawable/user_default_2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <View android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/color_grey_150"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  我的钱包"
            android:id="@+id/button3"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_5"
            android:drawableStart="@drawable/user_default_5"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <include layout="@layout/divider_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  我的订单"
            android:id="@+id/button4"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_3"
            android:drawableStart="@drawable/user_default_3"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <include layout="@layout/divider_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  我的觅迹"
            android:id="@+id/button10"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_4"
            android:drawableStart="@drawable/user_default_4"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <View android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/color_grey_150"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  应用设置"
            android:id="@+id/button7"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_1"
            android:drawableStart="@drawable/user_default_1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <include layout="@layout/divider_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  反馈"
            android:id="@+id/button8"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_2"
            android:drawableStart="@drawable/user_default_2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <include layout="@layout/divider_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:text="  关于"
            android:id="@+id/button9"
            android:textSize="18sp"
            android:drawableLeft="@drawable/user_default_5"
            android:drawableStart="@drawable/user_default_5"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>

</LinearLayout>
