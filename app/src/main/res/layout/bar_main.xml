<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btn_bar_home"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:drawableStart="@drawable/ic_place_white_24dp"
        android:drawableLeft="@drawable/ic_place_white_24dp"
        android:text="@string/position_fix"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_text_title"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/btn_bar_friends"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_group_white_24dp"
        android:background="?attr/selectableItemBackground"
        android:layout_toLeftOf="@+id/btn_bar_search"
        android:layout_toStartOf="@+id/btn_bar_search"
        android:scaleType="center"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/btn_bar_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_search_white_24dp"
        android:background="?attr/selectableItemBackground"
        android:layout_toLeftOf="@+id/btn_bar_add"
        android:layout_toStartOf="@+id/btn_bar_add"
        android:scaleType="center"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/btn_bar_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_add_white_24dp"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:layout_centerVertical="true" />

</RelativeLayout>