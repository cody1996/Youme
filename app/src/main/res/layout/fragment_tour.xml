<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codyme.youme.TourFragment">

    <include
        android:id="@+id/banner_tour_main"
        layout="@layout/banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tour_gate_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gateway_micro_tour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="微旅行"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_micro_tour"
            android:padding="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackground"
            android:text="\@觅"
            android:id="@+id/button2"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_at"
            android:padding="8dp" />

        <Button
            android:id="@+id/gateway_theme_tour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="主题游"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_theme_tour"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tour_gate_height"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="体验券"
            android:id="@+id/button4"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_vouchers"
            android:padding="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="美食"
            android:id="@+id/button5"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_foods"
            android:padding="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="客栈"
            android:id="@+id/button6"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_hotels"
            android:padding="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="车票"
            android:id="@+id/button7"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_tour_gateway_tickets"
            android:padding="8dp" />
    </LinearLayout>

    <com.codyme.youme.Views.ClickableImageView
        android:id="@+id/introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:src="@drawable/introduce_cover"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_grey_150" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="热门推荐"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary" />

    <include layout="@layout/divider_horizontal" />

    <com.codyme.youme.Views.InnerListView
        android:id="@+id/list_tour_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
