<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/item_good_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/item_cover_good_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_good_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_good_tag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textColor="@color/color_text_link"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom">

            <TextView
                android:id="@+id/item_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_good_sales"
                android:textSize="14sp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:paddingLeft="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>