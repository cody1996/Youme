                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="分类"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/bg_indicator_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/trans_dark_1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="分类"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/bg_indicator_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/trans_dark_1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="分类"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/bg_indicator_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/trans_dark_1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="分类"
                    android:maxLines="1"
