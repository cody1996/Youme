<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp">

    <ImageView
        android:id="@+id/item_store_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/item_cover_good_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_store_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_store_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_weight="4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/item_store_tag"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color_text_link"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_store_sales"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="2"
            android:gravity="left|center_vertical" />

    </LinearLayout>

</LinearLayout>